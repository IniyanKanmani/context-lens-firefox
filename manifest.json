{
  "manifest_version": 3,
  "name": "Context Lens",
  "version": "0.1.1",
  "description": "Firefox add-on for AI-powered contextual text explanations. Highlight text and get instant insights via popup.",
  "author": "Iniyan Kanmani",
  "homepage_url": "https://github.com/IniyanKanmani/context-lens-firefox",
  "icons": {
    "48": "src/icons/icon-48.png",
    "96": "src/icons/icon-96.png",
    "128": "src/icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "src/background.js",
      "src/llm_caller.js",
      "src/get_env.js",
      "src/prompt.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js", "src/popup.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://*/*"],
      "resources": ["src/popup.css", "src/icons/send-icon.svg"]
    }
  ],
  "commands": {
    "quick-explain": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      },
      "description": "Quick Explain"
    },
    "contextual-explain": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Explain with Additional Context"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{be780688-ddae-4f0b-80ea-9e4eecf409ac}",
      "strict_min_version": "112.0"
    }
  }
}
